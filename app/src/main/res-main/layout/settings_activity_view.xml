<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#F5F5F5"
>
	<android.support.v7.widget.Toolbar
		android:layout_width="match_parent"
		android:layout_height="?actionBarSize"
		android:id="@+id/toolbar"
		android:minHeight="?actionBarSize"
		android:theme="@style/Toolbar"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:elevation="4dp"
		app:popupTheme="@style/Widget.AppCompat.ActionBar"
		app:theme="@style/Toolbar"
	/>

	<ScrollView
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/toolbar"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
	>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:showDividers="middle|end"
			android:divider="@drawable/full_divider"
		>
			<android.support.constraint.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/update_container"
				android:padding="20dp"
				android:background="#ffffff"
			>
				<android.support.constraint.Guideline
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:id="@+id/center_guide"
					android:orientation="horizontal"
					app:layout_constraintGuide_percent="0.5"
				/>

				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/download_icon"
					android:src="@drawable/ic_update"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintStart_toStartOf="@id/center_guide"
					app:layout_constraintTop_toTopOf="parent"
				/>

				<Button
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/update_download"
					android:text="DOWNLOAD"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					style="@style/SmallButton"
				/>

				<TextView
					android:layout_width="0dp"
					android:layout_height="0dp"
					android:id="@+id/update_title"
					android:textColor="#ff000000"
					android:textSize="16sp"
					android:layout_marginRight="16dp"
					android:layout_marginLeft="16dp"
					android:fontFamily="sans-serif-regular"
					android:text="Content Update Available"
					android:ellipsize="end"
					android:singleLine="true"
					app:layout_constraintEnd_toStartOf="@id/update_download"
					app:layout_constraintStart_toEndOf="@id/download_icon"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintBottom_toBottomOf="@id/center_guide"
				/>

				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:id="@+id/update_description"
					android:layout_marginTop="6dp"
					android:fontFamily="sans-serif-light"
					android:textSize="12sp"
					android:layout_marginRight="16dp"
					android:layout_marginLeft="16dp"
					android:textColor="#ff000000"
					android:text="Current Version 1.0"
					app:layout_constraintEnd_toStartOf="@id/download"
					app:layout_constraintStart_toEndOf="@id/download_icon"
					app:layout_constraintTop_toBottomOf="@id/center_guide"
					app:layout_constraintBottom_toBottomOf="parent"
				/>
			</android.support.constraint.ConstraintLayout>
		</LinearLayout>
	</ScrollView>
</android.support.constraint.ConstraintLayout>
