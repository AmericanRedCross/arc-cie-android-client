<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#F5F5F5"
>
	<android.support.v7.widget.Toolbar
		android:layout_width="match_parent"
		android:layout_height="?actionBarSize"
		android:id="@+id/toolbar"
		android:minHeight="?actionBarSize"
		android:theme="@style/Toolbar"
		app:title="@string/setting_title"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:elevation="4dp"
		app:popupTheme="@style/Widget.AppCompat.ActionBar"
		app:theme="@style/Toolbar"
	/>

	<ScrollView
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/toolbar"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
	>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:showDividers="middle|end"
			android:divider="@drawable/full_divider"
		>
			<android.support.constraint.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/update_container"
				android:padding="20dp"
				android:background="#ffffff"
				android:layout_marginTop="24dp"
				android:layout_marginBottom="24dp"
			>
				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/update_icon"
					android:src="@drawable/ic_update"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintStart_toStartOf="parent"
				/>

				<Button
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/update_download"
					android:text="@string/setting_update_check_button"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					style="@style/SmallButton"
				/>

				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:id="@+id/update_title"
					android:text="@string/setting_update_check_title"
					app:layout_constraintStart_toEndOf="@id/update_icon"
					app:layout_constraintEnd_toStartOf="@id/update_download"
					android:textAlignment="viewStart"
					style="@style/Setting.Title"
				/>

				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:id="@+id/update_description"
					android:text="@string/setting_update_check_description"
					app:layout_constraintStart_toEndOf="@id/update_icon"
					app:layout_constraintTop_toBottomOf="@id/update_title"
					app:layout_constraintEnd_toStartOf="@id/update_download"
					android:textAlignment="viewStart"
					style="@style/Setting.Description"
				/>
			</android.support.constraint.ConstraintLayout>

			<android.support.constraint.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/video_container"
				android:padding="20dp"
				android:background="#ffffff"
			>
				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/video_icon"
					android:src="@drawable/ic_play"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintStart_toStartOf="parent"
				/>

				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:id="@+id/video_title"
					android:text="@string/setting_video_title"
					app:layout_constraintStart_toEndOf="@id/video_icon"
					app:layout_constraintEnd_toEndOf="parent"
					android:textAlignment="viewStart"
					style="@style/Setting.Title"
				/>

				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:id="@+id/video_description"
					android:text="@string/setting_video_description"
					app:layout_constraintStart_toEndOf="@id/video_icon"
					app:layout_constraintTop_toBottomOf="@id/video_title"
					app:layout_constraintEnd_toEndOf="parent"
					android:textAlignment="viewStart"
					style="@style/Setting.Description"
				/>
			</android.support.constraint.ConstraintLayout>

			<android.support.constraint.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/reset_container"
				android:padding="20dp"
				android:background="#ffffff"
			>
				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/reset_icon"
					android:src="@drawable/ic_reset"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintStart_toStartOf="parent"
				/>

				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:id="@+id/reset_title"
					android:text="@string/setting_reset_title"
					app:layout_constraintStart_toEndOf="@id/reset_icon"
					app:layout_constraintEnd_toEndOf="parent"
					android:textAlignment="viewStart"
					style="@style/Setting.Title"
				/>

				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:id="@+id/reset_description"
					android:text="@string/setting_reset_description"
					app:layout_constraintStart_toEndOf="@id/reset_icon"
					app:layout_constraintTop_toBottomOf="@id/reset_title"
					app:layout_constraintEnd_toEndOf="parent"
					android:textAlignment="viewStart"
					style="@style/Setting.Description"
				/>
			</android.support.constraint.ConstraintLayout>

			<android.support.constraint.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/locale_container"
				android:padding="20dp"
				android:background="#ffffff"
			>
				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/locale_icon"
					android:src="@drawable/ic_reset"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintStart_toStartOf="parent"
				/>

				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:id="@+id/locale_title"
					android:text="@string/setting_locale_title"
					app:layout_constraintStart_toEndOf="@id/locale_icon"
					app:layout_constraintEnd_toEndOf="parent"
					android:textAlignment="viewStart"
					style="@style/Setting.Title"
				/>

				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:id="@+id/locale_description"
					android:text="@string/setting_locale_description"
					app:layout_constraintStart_toEndOf="@id/locale_icon"
					app:layout_constraintTop_toBottomOf="@id/locale_title"
					app:layout_constraintEnd_toEndOf="parent"
					android:textAlignment="viewStart"
					style="@style/Setting.Description"
				/>
			</android.support.constraint.ConstraintLayout>
		</LinearLayout>
	</ScrollView>
</android.support.constraint.ConstraintLayout>
