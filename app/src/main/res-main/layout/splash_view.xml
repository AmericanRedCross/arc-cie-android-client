<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#ffffff"
>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/content"
		android:orientation="vertical"
		android:layout_gravity="center"
		android:paddingStart="24dp"
		android:paddingEnd="24dp"
	>
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/title"
			android:text="@string/splash_title"
			android:layout_marginTop="12dp"
			android:layout_gravity="center_horizontal"
			style="@style/Onboarding_Title"
		/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/body"
			android:text="@string/splash_body"
			android:layout_marginTop="18dp"
			android:layout_gravity="center_horizontal"
			style="@style/Onboarding_Body"
		/>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginTop="24dp"
			android:layout_gravity="center_horizontal"
		>
			<ImageView
				android:layout_width="92dp"
				android:layout_height="92dp"
				android:src="@drawable/splash_icon1"
				android:layout_marginEnd="4dp"
			/>

			<ImageView
				android:layout_width="92dp"
				android:layout_height="92dp"
				android:src="@drawable/splash_icon2"
				android:layout_marginStart="4dp"
			/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginTop="8dp"
			android:layout_gravity="center_horizontal"
		>
			<ImageView
				android:layout_width="92dp"
				android:layout_height="92dp"
				android:src="@drawable/splash_icon3"
				android:layout_marginEnd="4dp"
			/>

			<ImageView
				android:layout_width="92dp"
				android:layout_height="92dp"
				android:src="@drawable/splash_icon4"
				android:layout_marginStart="4dp"
			/>
		</LinearLayout>
	</LinearLayout>
</FrameLayout>
