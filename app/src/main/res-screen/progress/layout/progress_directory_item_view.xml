<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="4dp"
	android:padding="0dp"
	app:cardCornerRadius="8dp"
	app:cardPreventCornerOverlap="true"
>
	<android.support.constraint.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
	>
		<ProgressBar
			android:layout_width="0dp"
			android:layout_height="6dp"
			android:id="@+id/directory_progress"
			android:padding="0dp"
			android:layout_margin="0dp"
			android:minHeight="6dp"
			android:progressDrawable="@drawable/horizontal_progress_drawable"
			android:max="100"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			style="@style/Widget.AppCompat.ProgressBar.Horizontal"
		/>

		<TextView
			android:layout_width="22dp"
			android:layout_height="22dp"
			android:id="@+id/directory_hierarchy"
			android:background="@drawable/circle_bg_drawable"
			android:textColor="#ffffff"
			android:text="1"
			android:textStyle="bold"
			android:textSize="16dp"
			android:gravity="center"
			android:layout_marginTop="8dp"
			android:layout_marginStart="8dp"
			android:layout_marginEnd="8dp"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
		/>

		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:id="@+id/directory_name"
			android:textSize="16sp"
			android:textColor="#000000"
			android:textStyle="bold"
			android:textAlignment="viewStart"
			android:layout_marginStart="8dp"
			android:layout_marginEnd="8dp"
			app:layout_constraintStart_toEndOf="@id/directory_hierarchy"
			app:layout_constraintTop_toTopOf="@id/directory_hierarchy"
			app:layout_constraintBottom_toBottomOf="@id/directory_hierarchy"
			app:layout_constraintEnd_toStartOf="@+id/spacer"
		/>

		<TextView
			android:layout_width="0dp"
			android:layout_height="16dp"
			android:id="@+id/progress_text"
			android:layout_marginBottom="8dp"
			android:layout_marginEnd="8dp"
			android:layout_marginStart="8dp"
			android:textAlignment="viewStart"
			android:fontFamily="sans-serif-light"
			android:textColor="#6D6E70"
			android:textSize="14sp"
			app:layout_constraintBottom_toTopOf="@+id/directory_progress"
			app:layout_constraintEnd_toStartOf="@+id/spacer"
			app:layout_constraintStart_toStartOf="parent"
		/>

		<android.support.constraint.Guideline
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:id="@+id/spacer"
			android:orientation="vertical"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintGuide_percent=".70"
		/>

		<View
			android:layout_width="1dp"
			android:layout_height="0dp"
			android:id="@+id/substeps_divider"
			app:layout_constraintTop_toTopOf="@+id/directory_substeps_progress_text"
			app:layout_constraintBottom_toBottomOf="@+id/directory_substeps_progress_text"
			app:layout_constraintStart_toStartOf="@id/spacer"
		/>

		<View
			android:layout_width="1dp"
			android:layout_height="0dp"
			android:id="@+id/critical_divider"
			app:layout_constraintTop_toTopOf="@+id/directory_critical_progress_text"
			app:layout_constraintBottom_toBottomOf="@+id/directory_critical_progress_text"
			app:layout_constraintStart_toStartOf="@id/spacer"
		/>

		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:id="@+id/directory_substeps_progress_text"
			android:lines="2"
			android:text="2/4\nSUB-STEPS"
			android:textColor="#6D6E70"
			android:textSize="12sp"
			android:textAlignment="viewStart"
			android:layout_marginStart="8dp"
			android:layout_marginEnd="8dp"
			app:layout_constraintStart_toEndOf="@id/spacer"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="@id/directory_name"
		/>

		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:id="@+id/directory_critical_progress_text"
			android:text="3/12\nCRITICAL TOOLS"
			android:layout_marginBottom="8dp"
			android:layout_marginEnd="8dp"
			android:layout_marginStart="8dp"
			android:layout_marginTop="4dp"
			android:lines="2"
			android:textColor="#6D6E70"
			android:textSize="12sp"
			android:textAlignment="viewStart"
			app:layout_constraintBottom_toTopOf="@id/directory_progress"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@id/spacer"
			app:layout_constraintTop_toBottomOf="@id/directory_substeps_progress_text" />
	</android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
