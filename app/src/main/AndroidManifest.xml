<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.cube.arc"
>
	<uses-permission android:name="android.permission.INTERNET" />

	<application
		android:allowBackup="true"
		android:name=".cie.MainApplication"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:supportsRtl="true"
		android:theme="@style/AppTheme"
	>
		<activity android:name=".cie.activity.BootActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".cie.activity.MainActivity" />
		<activity android:name=".cie.activity.DocumentViewerActivity" android:theme="@style/AppTheme.Dialog" />

		<activity android:name=".workflow.adapter.NoteActivity" android:windowSoftInputMode="adjustResize" />

		<activity android:name=".onboarding.activity.OnboardingActivity" />
		<activity android:name=".onboarding.activity.VideoPlayerActivity" android:theme="@style/AppTheme.Fullscreen" android:screenOrientation="portrait" />
	</application>
</manifest>
